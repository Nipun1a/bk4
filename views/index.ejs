<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Task Manager</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-100 min-h-screen flex items-center justify-center">
  <div class="w-full max-w-md p-4">
    <form class="bg-white p-4 rounded shadow mb-6" action="/create" method="post">
      <input class="block w-full p-2 mb-4 border border-gray-300 rounded" type="text" placeholder="Enter your task" required name="title"/>
      <textarea class="block w-full p-2 mb-4 border border-gray-300 rounded" placeholder="Enter your message" required name="message" name="details"></textarea>
      <button class="w-full p-2 bg-blue-500 text-white rounded hover:bg-blue-600" type="submit">Submit</button>
    </form>

    <div class="task-list">
  <% if (tasks && tasks.length > 0) { %>
    <h2 class="text-lg font-semibold mb-4">Tasks</h2>
    <% tasks.forEach(function(task) { %>
      <div class="task-item bg-white p-4 mb-2 rounded shadow">
        <h1 class="font-semibold"><%= task.title %></h1>
        <a class="text-blue-600 underline cursor-pointer" href="/files/<%= task.title.split(" ").join("_") %>.txt">Read more</a>
        <a class="text-red-600 underline cursor-pointer" href="/delete/<%= task.title.split(" ").join("_") %>">Delete</a>
        <a class="text-green-600 underline cursor-pointer" href="/edit/<%= task.title.split(" ").join("_") %>">Edit</a>
      </div>
    <% }); %>
  <% } else { %>
    <h2 class="text-lg font-semibold mb-4">Tasks</h2>
    <p class="text-gray-500">No tasks found.</p>
  <% } %>
</div>

